{
  "name": "Trip",
  "description": "A travel trip planned by users",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the trip"
    },
    "destination": {
      "type": "string",
      "description": "Primary destination of the trip"
    },
    "from_location": {
      "type": "string",
      "description": "Starting location"
    },
    "duration": {
      "type": "string",
      "description": "Duration of the trip (e.g., '5 days', '2 weeks')"
    },
    "travelers": {
      "type": "number",
      "description": "Number of travelers"
    },
    "budget": {
      "type": "string",
      "description": "Budget range for the trip"
    },
    "custom_budget": {
      "type": "number",
      "description": "Custom budget amount in INR"
    },
    "is_road_trip": {
      "type": "boolean",
      "description": "Whether this is a road trip"
    },
    "transport_mode": {
      "type": "string",
      "description": "Preferred transport mode"
    },
    "interests": {
      "type": "array",
      "description": "User interests for the trip",
      "items": {
        "type": "string"
      }
    },
    "additional_locations": {
      "type": "array",
      "description": "Additional locations to visit",
      "items": {
        "type": "string"
      }
    },
    "ai_suggestions": {
      "type": "string",
      "description": "AI-generated suggestions for the trip"
    },
    "status": {
      "type": "string",
      "description": "Status of the trip (planning, confirmed, completed, saved)"
    }
  }
}